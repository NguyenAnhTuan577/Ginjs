<div class="limiter">
    <div class="container-login100">
        <div class="wrap-login100 p-l-85 p-r-85 p-t-55 p-b-55">
            <form class="login100-form validate-form flex-sb flex-w" method="POST" required="false">
                <span class="login100-form-title p-b-32">
                    Thanh toán
                </span>
                <span class="login100-form-title txt1 p-b-11">
                    <label for="fname">Chấp nhận các thẻ</label>
                    <div class="icon-container">
                        <i class="fa fa-cc-visa" style="color:navy;"></i>
                        <i class="fa fa-cc-amex" style="color:blue;"></i>
                        <i class="fa fa-cc-mastercard" style="color:red;"></i>
                        <i class="fa fa-cc-discover" style="color:orange;"></i>
                    </div>
                </span>



                <span class="txt1 p-b-11">
                    Tên trên thẻ
                </span>
                <div class="wrap-input100 validate-input m-b-36">
                    <input class="input100" type="text" name="cardname" placeholder="John More Doe">
                    <span class="focus-input100"></span>
                </div>

                <span class="txt1 p-b-11">
                    Số thẻ
                </span>
                <div class="wrap-input100 validate-input m-b-12">
                    <input class="input100" type="number" name="cardnumber" placeholder="1111-2222-3333-4444">
                    <span class="focus-input100"></span>
                </div>

                <div class="flex-sb-m w-full p-b-48">
                    <div class="container">
                        <h4>Giỏ hàng
                            <span class="price" style="color:black">
                                <i class="fa fa-shopping-cart"></i>
                                <b>{{numGame}}</b>
                            </span>
                        </h4>
                        <p><a href="#">Số tiền thanh toán: </a> <span class="price">{{totalPrice}}đ</span></p>

                    </div>
                </div>

                <div class="container-login100-form-btn">

                    <button class="login100-form-btn" type="submit">
                        Thanh toán
                    </button>
                </div>

            </form>
        </div>
    </div>
</div>


