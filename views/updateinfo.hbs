<div class="container">
    <div class="row">
        <div class="col-md-7">
            <form class="billing-details" method="POST">
                <div class="section-title">
                    <h3 class="title">CẬP NHẬT TÀI KHOẢN</h3>
                </div>
                <div class="form-group">
                    <input class="input" type="text" name="fullname" placeholder="họ và tên của bạn" value="{{user.fullname}}" autocomplete="off">
                </div>
        
                <div class="form-group">
                    <input class="input" type="email" name="email" placeholder="email" value="{{user.email}}" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="input" type="text" name="username" placeholder="username" value="{{user.username}}" autocomplete="off">
                </div>
                <div class="form-group">
                    <input class="input" type="password" name="password" placeholder="password" autocomplete="off">
                </div>
               
                <div class="form-group">
                    <button type='submit' name='id' value="{{user.id}}" class="primary-btn order-submit">Cập nhật</button>
                </div>
            </form>
        </div>
    </div>
</div>